/* pages/movie/movie-detail/movie-detail.wxss */
@import "/pages/template/movie-rating/movie-rating-template.wxss";

.session-poster {
  display: flex;
  align-items: center;
  width: 100%;
  border-bottom: 0rem;
  /* background: #e9e9e9; */
}

.session-poster-spacing {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.session-poster .poster {
  /* display: inline-block; */
  margin: 0rpx auto;
  text-align: center;
  width: 300rpx;
  height: 440rpx;
  position: relative;
  z-index: 1;
}

.session-poster .blur {
  height: 500rpx;
  width: 100%;
  position: absolute;
  z-index: 0;
  filter: blur(30px);
  -webkit-filter: blur(30px);
}

.session-summary {
  display: flex;
  flex-direction: row;
  height: 260rpx;
  align-content: center;
}

.session-summary .movie-summary {
  display: flex;
  flex-direction: column;
  width: 520rpx;
  margin: 30rpx;
}

.movie-summary .title {
  width: 100%;
  color: #4a4a4a;
  font-size: 42rpx;
  font-weight: 700;
  line-height: 1.6;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.movie-summary .subtype {
  font-size: 24rpx;
  color: #9e9e9e;
}

.movie-summary .aka {
  font-size: 24rpx;
  color: #9e9e9e;
}

.movie-summary .countries {
  font-size: 24rpx;
  color: #9e9e9e;
}

.movie-rating {
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #9e9e9e;
  box-shadow: 4rpx 4rpx 2rpx #e6e6e6;
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  margin: 35rpx;
}

.movie-rating .rating {
  display: flex;
  flex-direction: row;
  position: inherit;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  align-self: center;
}

.movie-rating .rating-star {
  content: "";
  display: inline-block;
  width: 55px;
  height: 11px;
  position: inherit;
  background-repeat: no-repeat;
  background-image: url(http://oaph7kw2c.bkt.clouddn.com/ic_rating_s.png);
}

.movie-rating .average {
  font-size: 36rpx;
  font-weight: 700;
}

.movie-rating .ratings_count {
  margin-top: 15rpx;
  font-size: 20rpx;
  color: #9e9e9e;
}

.session-wish-do {
  display: flex;
  flex-direction: row;
  align-self: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.session-wish-do .wish-to-watch {
  font-size: 28rpx;
  color: #de9703;
  padding: 10rpx 70rpx 10rpx 70rpx;
  margin-right: 80rpx;
  text-align: center;
  border-radius: 6rpx;
  border: 1px solid #de9703;
  box-sizing: border-box;
}

.session-wish-do .already-watched {
  font-size: 28rpx;
  color: #de9703;
  padding: 10rpx 70rpx 10rpx 70rpx;
  margin-left: 80rpx;
  text-align: center;
  border-radius: 6rpx;
  border: 1px solid #de9703;
  box-sizing: border-box;
}

.session-detail {
  display: flex;
  flex-direction: column;
  padding: 0rpx 30rpx 0 30rpx;
  margin: 30rpx 0 30rpx 0;
}

.session-detail .desc {
  color: #9e9e9e;
  font-size: 32rpx;
  line-height: 42rpx;
}

.session-detail .desc-wrapper {
  display: inline-block;
}

.session-detail .desc-wrapper .desc-content {
  font-size: 24rpx;
  color: #4a4a4a;
  line-height: 38rpx;
  text-indent: 2em;
  text-overflow: ellipsis;
  overflow: hidden;
  display: block;
}

.session-detail .desc-wrapper .desc-content-auto {
  height: auto;
}

.session-detail .desc-wrapper .desc-content-3line {
  height: 114rpx;
}

.session-detail .desc-wrapper .expand {
  height: 38rpx;
  font-size: 24rpx;
  line-height: 38rpx;
  color: #32cd32;
  float: right;
  margin: 10rpx;
}

.session-detail .desc-wrapper .cut-off {
  height: 38rpx;
  font-size: 24rpx;
  line-height: 38rpx;
  color: #32cd32;
  float: right;
  margin: 10rpx;
}

.session-film-maker {
  display: flex;
  flex-direction: column;
  padding: 0rpx 30rpx 0 30rpx;
  margin: 30rpx 0 30rpx 0;
}

.session-film-maker .film-maker-text {
  color: #9e9e9e;
  font-size: 32rpx;
  line-height: 42rpx;
}

.session-film-maker .film-maker-wrapper {
  display: inline-block;
}

.session-film-maker .film-maker-wrapper .film-maker-content {
  display: flex;
  flex-direction: column;
  text-align: center;
}

.session-film-maker .film-maker-wrapper .film-maker-content .film-maker-avatar {
  width: 160rpx;
  height: 230rpx;
  margin: 15rpx;
}

.session-film-maker .film-maker-wrapper .film-maker-content .film-maker-avatar:first-child{
  margin-left: 0rpx;
}

.session-film-maker .film-maker-wrapper .film-maker-content .film-maker-avatar:last-child{
  margin-right: 0rpx;
}


.session-film-maker .film-maker-wrapper .film-maker-content .film-maker-name {
  width:160rpx;
  color: #4a4a4a;
  font-size: 22rpx;
  word-break: keep-all;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.session-film-maker .film-maker-scroll-view{
  width: 100%;
  white-space: nowrap;
}